<div class="user-attributes-wrapper-sessions-new">
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="user-attributes-inner-wrapper-sessions-new">
          <h2>Entrar</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, label: 'E-mail'  %>
              <%= f.input :password, required: false, label: 'Senha'  %>
              <%= f.input :remember_me, label: 'Lembrar-me', as: :boolean if devise_mapping.rememberable?  %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Entrar" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>




