
<style type="text/css">
.carousel{
  margin-top: 20px;
  background: white;
}

.bs-example{
  margin: 20px;
  width: 100%;


}
.carousel-color{
  background-color: black;
}
.carousel-inner {
  height: 370px;
  width: 100%;
  .item {
  height: 100%;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;


  }
}


</style>


<div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner carousel-color">
          <% @top_makes.each_with_index do |make, index| %>
            <% if index == 0 %>
              <div class="item active" style="background-image: url('<%= make.images.first.image_url %>')">
              </div>
            <% else %>
              <div class="item" style="background-image: url('<%= make.images.first.image_url %>')">
              </div>
            <% end %>
          <% end %>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
