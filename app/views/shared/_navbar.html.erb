              <li>
                <%= link_to profile_liked_makes_path do %>
                  <span class="glyphicon glyphicon-heart-empty color-items"></span> Inspirações
                <% end %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out color-items"></span> Sair
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
