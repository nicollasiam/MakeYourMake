          <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="current-user-name" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.artistic_name.blank? ? "#{current_user.first_name} #{current_user.last_name}" : current_user.artistic_name %> <span class="caret color-items"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to profile_user_path(current_user) do %>
                  <span class="glyphicon glyphicon-user color-items"></span> Perfil
                <% end %>
              </li>
              <li role="separator" class="divider"></li>
              <% if current_user.professional %>
                <li>
                  <%= link_to profile_makes_path do %>
                    <span class="glyphicon glyphicon-eye-open color-items"></span> Minhas Makes
                  <% end %>
                </li>

              <% end %>

